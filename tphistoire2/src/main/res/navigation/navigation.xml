<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/formFragment">

    <fragment
        android:id="@+id/formFragment"
        android:name="com.example.tphistoire2.FormFragment"
        android:label="FormFragment" >
        <action
            android:id="@+id/action_form_to_histoire"
            app:destination="@id/histoireFragment" />
    </fragment>
    <fragment
        android:id="@+id/histoireFragment"
        android:name="com.example.tphistoire2.HistoireFragment"
        android:label="HistoireFragment" >
        <argument
            android:name="histoire"
            app:argType="com.example.tphistoire2.Histoire" />
    </fragment>
</navigation>